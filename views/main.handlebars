  <body class="bg-gray-100">
    <!-- email and the game grid -->
    <div class="container mx-auto px-4 py-8">
      <div class="flex justify-between">
      <!-- User Email Display -->
        <div class="flex flex-col p-4 ">
          <span class="text-md text-gray-700">USER: {{email}}</span>
          <span class="text-md text-gray-700">SCORE: {{score}}</span>
        </div>

        <div class="flex flex-row p-4 gap-3">
          <a
            href="/api/user/newgame"
            class="h-16 px-6  hover:bg-blue-700 text-white font-bold py-4 px-4 border border-blue-500 bg-blue-500 hover:border-gray-500 transition-colors duration-300"
          >New Game</a>
          <a
            href="api/logout"
            class="h-16 px-6 hover:bg-blue-700 text-white font-bold py-4 px-4 border border-blue-500 bg-blue-500 hover:border-gray-500 transition-colors duration-300"
          >Logout</a>
        </div>
      </div>

      <!-- Game Grid -->
      <div class="flex flex-col justify-center items-center bg-white max-h-lg max-w-lg mx-auto">
